---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import Button from '../../components/Button.astro';
import BeforeAfterGallery from '../../components/BeforeAfterGallery.tsx';
import { clinicInfo } from '../../utils/clinicInfo';

const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Patient Education', href: '/patient-education' },
  { label: 'Before & After', href: '/patient-education/before-after' },
];

const transformations = [
  {
    title: "Professional Teeth Whitening",
    description: "Dramatic smile brightening achieved in just one visit",
    before: "/images/hero/dental-1.jpg",
    after: "/images/hero/dental-2.jpg",
    treatment: "Zoom! Whitening",
    duration: "1 hour",
    concern: "Yellow, stained teeth"
  },
  {
    title: "Porcelain Veneers",
    description: "Complete smile makeover addressing multiple cosmetic concerns",
    before: "/images/hero/dental-2.jpg",
    after: "/images/hero/dental-3.jpg",
    treatment: "Porcelain Veneers",
    duration: "2 weeks",
    concern: "Discolored and misaligned teeth"
  },
  {
    title: "Dental Implants",
    description: "Permanent tooth replacement with natural-looking results",
    before: "/images/hero/dental-3.jpg",
    after: "/images/hero/dental-1.jpg",
    treatment: "Dental Implant",
    duration: "4-6 months",
    concern: "Missing front tooth"
  }
];
---

<Layout 
  title="Before & After Gallery" 
  description="View real patient transformations at Revital Dental in Austin, TX. See our before and after gallery showcasing stunning smile makeovers."
>
  <Hero
    title="Before & After Gallery"
    subtitle="Real patient transformations and smile makeovers"
    images={["/images/hero/dental-1.jpg"]}
    height="md"
  />
  
  <Breadcrumbs items={breadcrumbItems} />
  
  <div class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <!-- Introduction -->
      <section class="mb-16 max-w-3xl mx-auto text-center" data-aos="fade-up">
        <h2 class="text-3xl md:text-4xl font-bold font-heading text-gray-800 mb-6">
          Real Patient Results
        </h2>
        <p class="text-lg text-gray-600">
          Browse our collection of smile transformations. These before and after photos showcase 
          actual results achieved by our patients at {clinicInfo.name}.
        </p>
      </section>

      <!-- Gallery Grid -->
      <section class="mb-16" data-aos="fade-up">
        <BeforeAfterGallery client:load transformations={transformations} />
      </section>

      <!-- CTA Section -->
      <section class="max-w-3xl mx-auto text-center" data-aos="fade-up">
        <div class="bg-primary-50 p-8 rounded-lg">
          <h2 class="text-2xl font-bold font-heading text-gray-800 mb-4">
            Ready to Transform Your Smile?
          </h2>
          <p class="text-gray-600 mb-6">
            Schedule a consultation to discuss your smile goals and learn how we can help you 
            achieve the smile you've always wanted.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <Button
              href={clinicInfo.booking.url}
              text="Book Consultation"
              variant="primary"
              size="lg"
              target="_blank"
              rel="noopener noreferrer"
            />
            <Button
              href={`tel:${clinicInfo.phone}`}
              text="Call Us"
              variant="outline"
              size="lg"
            />
          </div>
        </div>
      </section>
    </div>
  </div>
</Layout>