const insuranceProviders = [
  "Delta Dental",
  "Delta Dental Premier",
  "MetLife",
  "Blue Cross Blue Shield",
  "Aetna",
  "Guardian",
  "Careington",
  "Dental Health Alliance",
  "United Healthcare",
  "United Concordia",
  "Humana",
  "Cigna"
];
---

<Layout 
  title="Patient Information" 
  description="Find important information for new and existing patients at Revital Dental in Austin, TX. Learn about appointments, insurance, and payment options."
>
  <Hero
    title="Patient Information"
    subtitle="The team at Revital Dental is committed to providing excellent dental care in a comfortable environment where patients can relax and feel at ease."
    images={["/images/hero/dental-2.jpg"]}
    height="md"
  />
  
  <Breadcrumbs items={breadcrumbItems} />
  
  <!-- Main Content -->
  <div class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <!-- Contact Information -->
      <section class="mb-16" data-aos="fade-up">
        <div class="bg-primary-50 rounded-lg p-8">
          <h2 class="text-2xl font-bold font-heading text-gray-800 mb-6">Contact Us</h2>
          <p class="text-lg text-gray-600 mb-6">
            We are happy to hear from you, answer your questions, and schedule an appointment.
          </p>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h3 class="font-bold text-gray-800 mb-2">Phone</h3>
              <a 
                href="tel:+17376008776" 
                class="text-primary-600 hover:text-primary-700 text-lg font-medium transition-colors duration-200"
              >
                (737) 600-8776
              </a>
            </div>
            
            <div>
              <h3 class="font-bold text-gray-800 mb-2">Address</h3>
              <a 
                href="https://www.google.com/maps/place/12314+N+Interstate+Hwy+35+Ste+110,+Austin,+TX+78753"
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-600 hover:text-primary-600 transition-colors duration-200"
              >
                12314 N Interstate Hwy 35 Ste 110<br>
                Austin, TX 78753
              </a>
            </div>
          </div>
        </div>
      </section>

      <!-- Welcome Section -->
      <section class="mb-16" data-aos="fade-up">
        <h2 class="text-2xl font-bold font-heading text-gray-800 mb-6">Welcome to Revital Dental</h2>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <div>
            <div class="space-y-8">
              <div>
                <h3 class="text-xl font-bold text-gray-800 mb-3">Making an Appointment</h3>
                <p class="text-gray-600">
                  It's easy to make an appointment for your initial examination and dental treatments. 
                  Simply call (737) 600-8776 to speak with our friendly team. We request 48-hours notice 
                  for appointment cancellations to avoid a cancellation fee.
                </p>
              </div>
              
              <div>
                <h3 class="text-xl font-bold text-gray-800 mb-3">What to Expect</h3>
                <p class="text-gray-600">
                  Upon arriving, you'll be welcomed by our friendly staff in our comfortable waiting area. 
                  We'll collect your new patient paperwork and insurance information. Your privacy is important 
                  to us, and you can be confident that all information shared with our team will be kept confidential.
                </p>
              </div>
            </div>
          </div>
          
          <div class="space-y-8">
            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-3">Initial Examination</h3>
              <p class="text-gray-600">
                Your first visit typically includes a comprehensive exam, professional cleaning by our hygienist, 
                and a thorough examination by Dr. Yanala. This appointment usually takes about an hour, allowing 
                us to get to know you and understand your dental needs.
              </p>
            </div>
            
            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-3">Pain Concerns</h3>
              <p class="text-gray-600">
                We understand that dental anxiety is common. Dr. Yanala will work with you to create a 
                pain management plan tailored to your needs and comfort level. Our goal is to make your 
                dental experience as comfortable as possible.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Payment & Insurance -->
      <section class="mb-16" data-aos="fade-up">
        <div class="bg-gray-50 rounded-lg p-8">
          <h2 class="text-2xl font-bold font-heading text-gray-800 mb-6">Payment & Insurance Information</h2>
          
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-4">Payment Methods</h3>
              <p class="text-gray-600 mb-6">
                We accept various payment methods to make dental care accessible to all our patients:
              </p>
              
              <div class="grid grid-cols-2 sm:grid-cols-3 gap-4 mb-8">
                {paymentMethods.map(method => (
                  <div class="flex items-center gap-2 text-gray-600">
                    <span set:html={method.icon} />
                    <span>{method.name}</span>
                  </div>
                ))}
              </div>
            </div>
            
            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-4">Insurance</h3>
              <p class="text-gray-600 mb-4">
                We work with most major dental insurance providers and will help you maximize your benefits. 
                Our team will assist you in understanding your coverage and filing claims.
              </p>
              
              <div class="grid grid-cols-2 gap-4">
                {insuranceProviders.map(provider => (
                  <div class="text-gray-600">{provider}</div>
                ))}
              </div>
              
              <p class="text-gray-600 mt-4">
                We also accept PPO plans and Medicare. Don't have insurance? Ask about our in-house membership 
                plan and financing options through Cherry.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Financial Policy -->
      <section class="mb-16" data-aos="fade-up">
        <h2 class="text-2xl font-bold font-heading text-gray-800 mb-6">Financial Policy</h2>
        <p class="text-gray-600 mb-6">
          At Revital Dental, we believe everyone deserves access to quality dental care. We offer:
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100">
            <h3 class="font-bold text-gray-800 mb-3">Flexible Payment Plans</h3>
            <p class="text-gray-600">
              We offer various payment options to help make your dental care more affordable.
            </p>
          </div>
          
          <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100">
            <h3 class="font-bold text-gray-800 mb-3">Insurance Coordination</h3>
            <p class="text-gray-600">
              Our team will help you understand and maximize your insurance benefits.
            </p>
          </div>
          
          <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100">
            <h3 class="font-bold text-gray-800 mb-3">Transparent Pricing</h3>
            <p class="text-gray-600">
              We provide clear cost estimates before beginning any treatment.
            </p>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="text-center" data-aos="fade-up">
        <h2 class="text-2xl font-bold font-heading text-gray-800 mb-6">Ready to Schedule Your Visit?</h2>
        <p class="text-lg text-gray-600 mb-8">
          Contact us today to schedule your appointment or ask any questions about our services.
        </p>
        
        <div class="flex flex-wrap justify-center gap-4">
          <Button
            href="/book-appointment"
            text="Book Appointment"
            variant="primary"
            size="lg"
          />
          <Button
            href="tel:+17376008776"
            text="Call Us"
            variant="outline"
            size="lg"
          />
        </div>
      </section>
    </div>
  </div>
</Layout>