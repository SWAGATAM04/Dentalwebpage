  { name: 'American Express', icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-8" viewBox="0 0 24 24" fill="currentColor"><path d="M2.614 14.076h1.951l.413-.938h.938l.413.938h3.827v-.713l.341.713h1.975l.341-.725v.725h7.912l.975-1.027.91 1.027h2.039l-3.001-3.264 3.001-3.264h-1.989l-.947 1.039-.873-1.039h-8.001v.713l-.314-.713h-1.951l-.314.725v-.725h-2.926l-.524 1.189-.536-1.189h-2.013v.713l-.289-.713h-1.814l-1.038 2.365-1.101-2.365h-1.926l1.364 2.977-1.364 2.977h1.926l1.101-2.365 1.038 2.365z"/></svg>' },
  { name: 'Discover', icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-8" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2zm0 2a8 8 0 100 16 8 8 0 000-16zm3.5 4.5a4.5 4.5 0 110 9 4.5 4.5 0 010-9z"/></svg>' },
