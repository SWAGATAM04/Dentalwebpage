---
// src/pages/blog/index.astro
import Layout from '../../layouts/Layout.astro'; // Correct path
import Hero from '../../components/Hero.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { blogPosts } from '../../utils/blogPosts';
import type { BlogPost } from '../../utils/blogPosts'; // Assuming BlogPost type is exported
import { Image } from 'astro:assets';
import { clinicInfo } from '../../utils/clinicInfo';

// --- IMPORT THE HERO IMAGE FOR THE BLOG INDEX PAGE ---
import blogIndexPageHeroImage from '../../assets/images/hero/dental-1.jpg'; // Example, ensure this exists in src/assets/images/hero/

const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Our Blog', href: '/blog' },
];

const pageTitle = "Lilac Dental Blog";
const pageSubtitle = "Expert Insights, Tips, and News for Your Oral Health";
const metaDescription = `Stay informed with the latest dental health tips, treatment guides, and oral care insights from the professionals at ${clinicInfo.name} in Austin, TX.`;
const pageUrl = new URL(Astro.url.pathname, Astro.site || Astro.url.origin).toString();

const ogImageForIndex = blogIndexPageHeroImage && typeof blogIndexPageHeroImage === 'object' && 'src' in blogIndexPageHeroImage
  ? new URL(blogIndexPageHeroImage.src, Astro.site || Astro.url.origin).toString()
  : new URL("/images/hero/lilac-dental-og-image.jpg", Astro.site || Astro.url.origin).toString(); // Fallback public OG image

// --- DEFINE SIZES ATTRIBUTE FOR BLOG CARD IMAGES HERE ---
// This string needs to accurately describe your layout.
// Example:
// - Mobile (up to 639px viewport): Image takes 90% of viewport width.
// - Tablet (640px to 1023px viewport): If 2 columns, image is ~45% of viewport width.
// - Desktop (1024px+ viewport): If 3 columns, image is ~30-33% of viewport width. Or a fixed max width.
// ** ADJUST THIS CAREFULLY BASED ON YOUR CSS FOR BLOG CARDS **
const blogCardImageSizes = "(max-width: 639px) 90vw, (max-width: 1023px) 45vw, 33vw";
// If the above still causes issues, try a very simple default for debugging:
// const blogCardImageSizes = "320px";
---

<Layout
  title={`${pageTitle} | ${clinicInfo.name}`}
  description={metaDescription}
  canonicalURL={pageUrl}
  og={{
    title: `${pageTitle} | ${clinicInfo.name}`,
    description: metaDescription,
    image: ogImageForIndex,
    type: "website",
    url: pageUrl,
    site_name: clinicInfo.name
  }}
  twitter={{
    card: "summary_large_image",
    title: `${pageTitle} | ${clinicInfo.name}`,
    description: metaDescription,
    image: ogImageForIndex
  }}
>
  <Hero
    title={pageTitle}
    subtitle={pageSubtitle}
    images={[blogIndexPageHeroImage]}
    height="sm"
    showAppointmentForm={false}
    isHomePage={false}
  />

  <Breadcrumbs items={breadcrumbItems} class="py-4 bg-gray-50 dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700"/>

  <div class="py-12 md:py-16 bg-white dark:bg-gray-900">
    <div class="container mx-auto px-4">
      <div class="text-center mb-10 md:mb-14" data-aos="fade-up">
        <h1 class="text-3xl md:text-4xl font-bold font-heading text-gray-800 dark:text-white mb-3">
          Latest Articles & Dental Insights
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto leading-relaxed">
          Explore tips, guides, and news from our dental experts to help you maintain a healthy and beautiful smile.
        </p>
      </div>

      {blogPosts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8"> {/* Ensure this matches your sizes logic (e.g., 3 cols on lg) */}
          {blogPosts.map((post: BlogPost) => (
            <article class="bg-white dark:bg-gray-800 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden flex flex-col group" data-aos="fade-up">
              {post.image && typeof post.image === 'object' && 'src' in post.image ? (
                <a href={`/blog/${post.id}`} class="block aspect-w-16 aspect-h-9 overflow-hidden shrink-0" aria-label={`Read more about ${post.title}`}>
                  <Image
                    src={post.image}
                    alt={`Featured image for ${post.title}`}
                    class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                    loading="lazy"
                    format="webp"
                    quality={80}
                    widths={[320, 480, 640, 800]} // Provide a good range of widths
                    sizes={blogCardImageSizes}   // Use the variable defined in frontmatter
                  />
                </a>
              ) : (
                <div class="aspect-w-16 aspect-h-9 bg-gray-200 dark:bg-gray-700 flex items-center justify-center shrink-0">
                  <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                </div>
              )}
              <div class="p-4 sm:p-6 flex flex-col justify-between flex-grow">
                <div>
                  <div class="flex flex-wrap items-center gap-x-3 gap-y-1 text-xs sm:text-sm text-gray-600 dark:text-gray-400 mb-2 sm:mb-3">
                    <time datetime={post.date}>{new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
                    <span class="hidden sm:inline">â€¢</span>
                    <span class="bg-primary-50 dark:bg-primary-900/50 px-2 py-0.5 rounded-full text-primary-600 dark:text-primary-300 font-medium">{post.category}</span>
                  </div>
                  <h2 class="text-lg sm:text-xl font-bold font-heading text-gray-800 dark:text-white mb-2 sm:mb-3 leading-tight">
                    <a href={`/blog/${post.id}`} class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200 line-clamp-2">
                      {post.title}
                    </a>
                  </h2>
                  <p class="text-gray-700 dark:text-gray-300 mb-4 sm:mb-5 line-clamp-3 text-sm sm:text-base leading-relaxed">{post.excerpt}</p>
                </div>
                <div class="mt-auto flex items-center justify-between">
                  <div class="flex items-center gap-2">
                    <span class="text-sm text-gray-500 dark:text-gray-400">By {post.author}</span>
                  </div>
                  <a
                    href={`/blog/${post.id}`}
                    class="inline-flex items-center text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium transition-colors duration-200 text-sm group"
                  >
                    Read More
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transform group-hover:translate-x-0.5 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <p class="text-center text-gray-600 dark:text-gray-400 py-10 text-lg">No blog posts available yet. Please check back soon!</p>
      )}
    </div>
  </div>
</Layout>
