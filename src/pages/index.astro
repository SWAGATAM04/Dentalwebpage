---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import FeatureCard from '../components/FeatureCard.astro';
import Button from '../components/Button.astro';
import { clinicInfo } from '../utils/clinicInfo';
import services from '../utils/services';

const heroImages = [
  '/images/hero/dental-1.jpg',
  '/images/hero/dental-2.jpg',
  '/images/hero/dental-3.jpg',
  '/images/hero/dental-4.jpg',
  '/images/hero/dental-5.jpg',
  '/images/hero/dental-6.jpg'
];

// Featured Services
const featuredServices = [
  {
    title: "Dental Checkup",
    description: "Comprehensive examinations to maintain your oral health",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>',
    link: "/services/dental-checkup"
  },
  {
    title: "Teeth Cleaning",
    description: "Professional cleaning to keep your smile bright",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" /></svg>',
    link: "/services/teeth-cleaning"
  },
  {
    title: "Dental Implants",
    description: "Restore your smile with permanent tooth replacement",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" /></svg>',
    link: "/services/dental-implants"
  }
];

// Features
const features = [
  {
    title: "State-of-the-Art Technology",
    description: "Using the latest dental technology for precise and comfortable care",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" /></svg>',
    color: "primary"
  },
  {
    title: "Comfortable Environment",
    description: "Relaxing atmosphere designed for your comfort and peace of mind",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" /></svg>',
    color: "secondary"
  },
  {
    title: "Experienced Team",
    description: "Skilled professionals dedicated to providing exceptional dental care",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" /></svg>',
    color: "accent"
  }
];

const insuranceProviders = [
  "Delta Dental",
  "Delta Dental Premier",
  "MetLife",
  "Blue Cross Blue Shield",
  "Aetna",
  "Guardian",
  "Careington",
  "Dental Health Alliance",
  "United Healthcare",
  "United Concordia",
  "Humana",
  "Cigna"
];
---

<Layout title="Welcome to Revital Dental">
  <Hero
    images={heroImages}
    showAppointmentForm={true}
    isHomePage={true}
  />

  <!-- Featured Services -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12" data-aos="fade-up">
        <h2 class="text-3xl md:text-4xl font-bold font-heading text-gray-800 mb-4">Our Services</h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          We provide comprehensive dental care services to meet all your oral health needs.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredServices.map(service => (
          <ServiceCard {...service} />
        ))}
      </div>

      <div class="text-center mt-12">
        <Button
          href="/services"
          text="View All Services"
          variant="outline"
          size="lg"
        />
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12" data-aos="fade-up">
        <h2 class="text-3xl md:text-4xl font-bold font-heading text-gray-800 mb-4">Why Choose Us</h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Experience exceptional dental care with our state-of-the-art facility and experienced team.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map(feature => (
          <FeatureCard {...feature} />
        ))}
      </div>
    </div>
  </section>

  <!-- Insurance Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center" data-aos="fade-up">
        <h2 class="text-3xl md:text-4xl font-bold font-heading text-gray-800 mb-4">We Accept Your Insurance</h2>
        <p class="text-lg text-gray-600 mb-8">
          We work with most major dental insurance providers to maximize your benefits and make dental care affordable.
        </p>
        
        <div class="bg-gray-50 rounded-lg p-8">
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            {insuranceProviders.map(provider => (
              <div class="bg-white p-4 rounded-lg shadow-sm flex items-center justify-center">
                <span class="text-gray-700 font-medium text-center">{provider}</span>
              </div>
            ))}
          </div>
          
          <p class="text-sm text-gray-500 mt-6">
            We also accept PPO plans and Medicare. Don't see your insurance listed? Contact us to verify your coverage. 
            We also offer flexible payment options and financing through Cherry.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-primary-600">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto" data-aos="fade-up">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6 font-heading">Ready to Schedule Your Visit?</h2>
        <p class="text-xl text-primary-100 mb-8">
          Experience exceptional dental care at {clinicInfo.name}. Our team is ready to help you achieve and maintain a healthy, beautiful smile.
        </p>
        
        <div class="flex flex-wrap justify-center gap-4">
          <Button
            href="/contact"
            text="Contact Us"
            variant="outline"
            size="lg"
            class="border-white text-white hover:bg-white hover:text-primary-600"
          />
        </div>
      </div>
    </div>
  </section>
</Layout>
