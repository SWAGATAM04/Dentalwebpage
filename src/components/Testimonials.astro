    const swiper = new window.Swiper('.testimonials-slider', {
      modules: [window.Swiper.Navigation, window.Swiper.Pagination],
      slidesPerView: 1,
      spaceBetween: 20,
      loop: true,
      navigation: {
        nextEl: '#testimonial-next',
        prevEl: '#testimonial-prev',
      },
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      breakpoints: {
        640: {
          slidesPerView: 1,
        },
        768: {
          slidesPerView: 2,
        },
        1024: {
          slidesPerView: 3,
        },
      },
    });
  });
</script>