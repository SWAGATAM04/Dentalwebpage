---
import { clinicInfo } from '../utils/clinicInfo';

const currentYear = new Date().getFullYear();

const services = [
  { name: 'Dental Checkup', href: '/services/dental-checkup' },
  { name: 'Teeth Cleaning', href: '/services/teeth-cleaning' },
  { name: 'Dental Implants', href: '/services/dental-implants' },
  { name: 'Root Canal', href: '/services/root-canal' },
  { name: 'Teeth Whitening', href: '/services/teeth-whitening' },
  { name: 'Smile Gallery', href: '/smile-gallery' },
];

const patientResources = [
  { name: 'Patient Information', href: '/patient-information' },
  { name: 'Financing Options', href: '/financing' },
  { name: 'FAQs', href: '/patient-education/faq' },
  { name: 'Dental Dictionary', href: '/patient-education/dental-dictionary' },
  { name: 'Before & After Gallery', href: '/smile-gallery' },
];

const aboutLinks = [
  { name: 'Our Team', href: '/about' },
  { name: 'Our Facility', href: '/about#facility' },
  { name: 'Technology', href: '/about#technology' },
  { name: 'Reviews', href: '/reviews' },
  { name: 'Blog', href: '/blog' },
  { name: 'Contact Us', href: '/contact' },
];

const socialMedia = [
  { 
    name: 'Yelp', 
    href: clinicInfo.social.yelp,
    icon: 'yelp'
  },
  { 
    name: 'Facebook', 
    href: clinicInfo.social.facebook,
    icon: 'facebook'
  },
  { 
    name: 'Twitter', 
    href: clinicInfo.social.twitter,
    icon: 'twitter'
  }
];
---

<footer class="bg-gray-800 text-white pt-16 pb-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Column 1: About & Contact -->
      <div>
        <div class="flex items-center gap-2 mb-4">
          <img src="/images/logo.png" alt="Revital Dental Logo" class="h-10 invert" />
        </div>
        <p class="mb-4 text-gray-300">Providing exceptional dental care with a gentle touch since 2005.</p>
        
        <div class="space-y-2 text-gray-300">
          <div class="flex items-start gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <a 
              href={clinicInfo.mapLink}
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-primary-300 transition-colors duration-200"
              aria-label="View Revital Dental location on Google Maps"
            >
              {clinicInfo.address.full}
            </a>
          </div>
          
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href={`tel:${clinicInfo.phone}`} class="hover:text-primary-300">{clinicInfo.displayPhone}</a>
          </div>
          
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href={`mailto:${clinicInfo.email}`} class="hover:text-primary-300">{clinicInfo.email}</a>
          </div>

          <!-- Social Media Links -->
          <div class="flex gap-4 mt-4">
            {socialMedia.map(platform => (
              <a 
                href={platform.href} 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-white hover:text-primary-300 transition-colors duration-200"
                aria-label={`Follow us on ${platform.name}`}
              >
                {platform.icon === 'yelp' && (
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.16 12.594l-4.995 1.433c-.95.275-1.857-.207-2.033-1.075-.177-.867.443-1.783 1.392-2.055l4.995-1.434c.95-.275 1.857.208 2.033 1.076.177.867-.443 1.782-1.392 2.055m-7.118 4.5l-4.466-2.576c-.85-.49-.99-1.597-.314-2.474.676-.877 1.917-1.195 2.766-.706l4.466 2.576c.85.49.99 1.597.314 2.474-.676.877-1.917 1.195-2.766.706m-1.476-11.68l3.161-4.07c.602-.775 1.74-.789 2.54-.032.8.758.96 1.995.358 2.77l-3.16 4.07c-.603.775-1.741.789-2.541.032-.8-.758-.96-1.995-.358-2.77m-.595 13.5L8.453 23.04c-.677.877-1.917 1.195-2.766.706-.85-.49-.99-1.597-.314-2.474l2.518-4.126c.677-.877 1.917-1.195 2.766-.706.85.49.99 1.597.314 2.474m-2.832-6.09L2.837 10.21c-.95-.274-1.568-1.19-1.392-2.055.177-.867 1.084-1.35 2.033-1.075l4.995 1.434c.95.274 1.568 1.19 1.392 2.055-.177.867-1.084 1.35-2.033 1.075"/>
                  </svg>
                )}
                {platform.icon === 'facebook' && (
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
                  </svg>
                )}
                {platform.icon === 'twitter' && (
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                  </svg>
                )}
              </a>
            ))}
          </div>
        </div>
      </div>
      
      <!-- Column 2: Services -->
      <div>
        <h3 class="text-lg font-bold font-heading text-white mb-4">Our Services</h3>
        <ul class="space-y-2">
          {services.map(service => (
            <li>
              <a href={service.href} class="text-gray-300 hover:text-primary-300 transition-colors duration-200">
                {service.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Column 3: Patient Resources -->
      <div>
        <h3 class="text-lg font-bold font-heading text-white mb-4">Patient Resources</h3>
        <ul class="space-y-2">
          {patientResources.map(resource => (
            <li>
              <a href={resource.href} class="text-gray-300 hover:text-primary-300 transition-colors duration-200">
                {resource.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Column 4: Hours -->
      <div>
        <h3 class="text-lg font-bold font-heading text-white mb-4">Office Hours</h3>
        <ul class="space-y-2 text-gray-300">
          {Object.entries(clinicInfo.hours).map(([day, hours]) => (
            <li class="flex justify-between">
              <span>{day}:</span>
              <span>{hours}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <div class="mt-12 pt-8 border-t border-gray-700 text-center text-gray-400 text-sm">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p>&copy; {currentYear} {clinicInfo.name}. All rights reserved.</p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/privacy-policy" class="hover:text-primary-300 transition-colors duration-200">Privacy Policy</a>
          <span>|</span>
          <a href="/terms-of-service" class="hover:text-primary-300 transition-colors duration-200">Terms of Service</a>
          <span>|</span>
          <a href="/accessibility" class="hover:text-primary-300 transition-colors duration-200">Accessibility</a>
        </div>
      </div>
    </div>
  </div>
</footer>