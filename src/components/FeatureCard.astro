---
export interface Props {
  title: string;
  description: string;
  icon: string;
  color?: 'primary' | 'secondary' | 'accent';
}

const { title, description, icon, color = 'primary' } = Astro.props;

const colors = {
  primary: 'bg-primary-100 text-primary-600',
  secondary: 'bg-secondary-100 text-secondary-600',
  accent: 'bg-accent-100 text-accent-600',
};
---

<div class="flex flex-col items-center text-center p-6 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300" data-aos="fade-up">
  <div class={`w-16 h-16 flex items-center justify-center rounded-full mb-4 ${colors[color]}`}>
    <span set:html={icon} />
  </div>
  
  <h3 class="text-xl font-bold mb-2 font-heading text-gray-800">{title}</h3>
  <p class="text-gray-600">{description}</p>
</div>